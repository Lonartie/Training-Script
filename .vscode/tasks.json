{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build html",
            "type": "shell",
            "command": "pandoc",
            "args": [
                "${workspaceFolder}/source/index.tex",
                "-o",
                "${workspaceFolder}/render/html/index.html",
                "--standalone",
                "--number-sections",
                "--toc"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}